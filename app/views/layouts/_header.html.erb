       <li class="<%= FiLabApp.help_class %>">
         <%= link_to FiLabApp.help_title, fiware_env_url(subdomain: FiLabApp.help_name) %>
       </li>
      <% end %>
    </ul>

    <% if false %>
      <ul class="nav pull-right">
